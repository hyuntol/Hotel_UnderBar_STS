<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EventMapper">

	<!-- 이벤트 등록  -->
	<insert id="eventInsert" parameterType="FaqDTO">
		insert into event 
		values('A'||TO_CHAR(faq_seq.nextval), #{subject}, #{author}, #{content},#{eventImg},sysdate)
	</insert>

	<!-- EVENT 조회 -->
		<!-- clob처리를 위한 코드 -->
		<resultMap id="eventContent" type="EventDTO" >
	    	<result property="content" column="content" jdbcType="CLOB" javaType="java.lang.String" />
		</resultMap>
	<select id="eventList" parameterType="int" resultType="EventDTO" resultMap="eventContent">
		select * from event order by regdate desc
	</select>
	
	<!-- Event 페이지 페이징을 위한 전체목록 개수 -->
	<select id="totalCount2" resultType="int">
		select count(*) from event
	</select>
	
	<!-- Event 보기  -->
	<select id="eventRetrieve" parameterType="String" resultType="EventDTO">
		select * from event where code = #{code}
	</select>
	
	<!-- 코멘트 작성 -->
	<insert id="addComment" parameterType="CommentDTO">
		insert into comments
		values(com_seq.nextval,#{e_code},#{comments}, #{writer}, sysdate)
	</insert>
	
	<!-- 댓글 리스트 불러오기 -->
		<!-- clob처리를 위한 코드 -->
		<resultMap id="comments" type="CommentDTO" >
	    	<result property="content" column="content" jdbcType="CLOB" javaType="java.lang.String" />
		</resultMap>
	<select id="commentListByCode" parameterType="string" resultType="CommentDTO" resultMap="comments">
		select * from comments where e_code = #{e_code}
	</select>

</mapper>